{
  "id": "io.github.EndlessSky.endless-sky",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "endless-sky",
  "rename-desktop-file": "endless-sky.desktop",
  "rename-icon": "endless-sky",
  "finish-args": [
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11",
    "--device=dri"
  ],
  "modules": [
    "shared-modules/glu/glu-9.json",
    "shared-modules/glew/glew.json",
    "shared-modules/libmad/libmad.json",
    {
      "name": "scons",
      "cleanup": [ "*" ],
      "buildsystem": "simple",
      "build-commands": [
        "python3 setup.py install --prefix=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/scons/scons/3.1.2/scons-3.1.2.tar.gz",
          "sha256": "7801f3f62f654528e272df780be10c0e9337e897650b62ddcee9f39fde13f8fb"
        }
      ]
    },
    {
      "name": "endless-sky",
      "buildsystem": "simple",
      "build-commands": [
        "ln -s /bin/python3 /app/bin/python",
        "CPPPATH=/app/include scons PREFIX=/app install -j$(nproc)",
        "install -Dm755 launcher /app/bin/endless-sky",
        "install -Dm644 endless-sky.appdata.xml /app/share/metainfo/io.github.EndlessSky.endless-sky.appdata.xml",
        "mkdir -p /app/share/games/endless-sky/plugins/",
        "cp -r endless-sky-high-dpi /app/share/games/endless-sky/plugins/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/endless-sky/endless-sky/archive/v0.9.11.tar.gz",
          "sha256": "6d5a17a100a1a7c72557fab8a63924aeb9e8ee08ff7194fd25de292e751ec1dd"
        },
        {
          "type": "archive",
          "url": "https://github.com/endless-sky/endless-sky-high-dpi/archive/v0.9.11.tar.gz",
          "sha256": "e6d756835caa82bfc530da9f05bd9fb5853c00126aa4ed3cea051d8528f160e7",
          "dest": "endless-sky-high-dpi"
        },
        {
          "type": "script",
          "dest-filename": "launcher",
          "commands": [
            "exec /app/games/endless-sky -r /app/share/games/endless-sky"
          ]
        },
        {
          "type": "file",
          "path": "endless-sky.appdata.xml"
        }
      ]
    }
  ]
}
